<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnShopNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button_border"
        android:fontFamily="@font/regular"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="Shop Now"
        android:textAllCaps="false"
        android:textColor="@color/primary_text" />


    <FrameLayout
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="4dp"
            android:paddingTop="6dp"
            android:src="@drawable/back" />
    </FrameLayout>


    <ImageView
        android:id="@+id/ivCart"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:scaleType="centerCrop"
        android:src="@drawable/shopping_basket_2" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/img_random_things" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/focused" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/bold"
        android:id="@+id/tvFav"
        android:text="Favorite Item"
        android:layout_below="@id/iv_back"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_heading_1x" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivCart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bold"
        android:text="Your Favorite Item is Empty"
        android:textColor="@color/white_full"

        android:textSize="@dimen/text_heading_1x" />


    <xyz.waiphyoag.shopify.components.SmartRecyclerView
        android:id="@+id/rv_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/tvFav"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp" />


</RelativeLayout>




